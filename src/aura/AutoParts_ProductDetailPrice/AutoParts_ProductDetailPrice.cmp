<aura:component description="AutoParts_ProductDetailPrice" controller="AutoParts_CustomSearchController"
                implements="forceCommunity:availableForAllPageTypes, force:hasRecordId">
    <aura:attribute name="productEntryList" type="List"/>
    <aura:attribute name="standardPrice" type="Integer"/>
    <aura:attribute name="discountPrice" type="Integer"/>
    <aura:attribute name="recordId" type="String"/>
    <aura:attribute name="amountProduct" type="Integer" default="1"/>
    <aura:registerEvent name="AutoParts_AddProductToBasket" type="c:AutoParts_AddProductToBasket"/>

    <aura:handler name="init" value="{!this}" action="{!c.init}"/>

    <div class="rightColumnWrap">
        <aura:if isTrue="{!v.discountPrice lt v.standardPrice}">
            <div class="discountInfo" style="text-align: center;">{!$Label.c.Limit_offer}</div>
        </aura:if>
            {!$Label.c.Price}:
        <div>
            <aura:if isTrue="{!v.discountPrice == v.standardPrice}">
                <div>
                    <p class="standardPriceWithOut">
                        <lightning:formattedNumber value="{!v.standardPrice}"
                                                   style="currency"
                                                   minimumFractionDigits="2"
                                                   maximumFractionDigits="2"/>
                    </p>
                </div>
            </aura:if>
            <aura:if isTrue="{!v.discountPrice lt v.standardPrice}">
                <div>
                    <s class="standardPrice">
                        <lightning:formattedNumber value="{!v.standardPrice}"
                                                   style="currency"
                                                   minimumFractionDigits="2"
                                                   maximumFractionDigits="2"/>
                    </s>
                </div>
            </aura:if>
            <aura:if isTrue="{!v.discountPrice lt v.standardPrice}">
                <div class="standardPriceWithOut">
                    <lightning:formattedNumber value="{!v.discountPrice}"
                                               style="currency"
                                               minimumFractionDigits="2"
                                               maximumFractionDigits="2"/>
                </div>
            </aura:if>
        </div>
        <div class="priceWrap">
            <span class="priceLabel"><lightning:formattedNumber value="{!v.discountPrice  * v.amountProduct}"
                                                                style="currency"
                                                                minimumFractionDigits="2"
                                                                maximumFractionDigits="2"/>
            </span>
        </div>
        <div class="slds-m-bottom--medium" style="text-align: center;">
            <lightning:button class="buttonDown" onclick="{!c.clickButtonDown}">
                -
            </lightning:button>
            <div class="buttonNumber slds-m-top--medium ">
                <lightning:input label="" variant="label-hidden"
                                 type="number" min="0" max="100"
                                 aura:id="searchForm"
                                 class="buttonNumber1"
                                 name="expenseName"
                                 value="{!v.amountProduct}"
                />
            </div>
            <lightning:button class="buttonUp" onclick="{!c.clickButtonUp}">
                +
            </lightning:button>
        </div>
        <div style="text-align: center;">
            <lightning:button class="addToCardButton" onclick="{!c.clickAddToBasket}" title="{!$Label.c.Add_to_cart}">
                    {!$Label.c.Add_to_cart}
            </lightning:button>
        </div>
    </div>
    <c:AutoParts_ShowToast aura:id="toast"/>
</aura:component>
